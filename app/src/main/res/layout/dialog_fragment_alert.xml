<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTitleNContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_margin_120px"
            android:paddingLeft="@dimen/general_margin_15px"
            android:paddingRight="@dimen/general_margin_15px"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/general_margin_40px"
            android:layout_weight="1"
            android:paddingLeft="@dimen/general_margin_15px"
            android:paddingRight="@dimen/general_margin_15px"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_margin_40px"
        android:layout_margin="@dimen/general_margin_15px"
        android:text="@string/general_confirm"
        android:gravity="center"
        android:textSize="@dimen/textsize_15sp"/>

</LinearLayout>